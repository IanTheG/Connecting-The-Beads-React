@media screen and (min-width: 10px) {
  .title {
    margin: 0;
    padding: 1rem;
    font-size: 2rem;
    font-family: "Satisfy", "Dancing Script", "cursive", "Arial", "sans-serif";
  }
  .title--small {
    font-size: 1.5rem;
  }

  .hero-image {
    flex: 1;
  }

  .instructions {
    margin: 0;
    padding: 1rem;
  }

  .desc {
    margin: 0;
    padding: 1rem;
    font-size: 1.2rem;
  }
  .desc--italic {
    font-style: italic;
  }
}
@media screen and (min-width: 10px) {
  .mysteries {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .mystery {
    margin: 0;
    margin-bottom: 2%;
    padding-left: 2rem;
    font-size: 2rem;
    font-family: "Satisfy", "Dancing Script", "cursive", "Arial", "sans-serif";
  }

  .link {
    flex: 1;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: black;
    padding-top: 0.5em;
  }
  .link:hover {
    background-color: #9E94AA;
  }

  .desc--day {
    padding: 0 0 0.5rem 3rem;
  }
}
@media screen and (min-width: 568px) {
  .mystery {
    padding: 0;
  }

  .mysteries {
    margin: 0;
    flex-direction: row;
  }

  .description--day {
    padding: 0 0 0.5rem 0;
  }

  .link {
    align-items: center;
  }
}
#portrait {
  display: none;
  background-image: url();
  text-align: center;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}
#portrait > div > i {
  padding: 0.5rem;
  font-size: 2rem;
}

@media (orientation: portrait) {
  .scroll-container {
    display: block;
  }

  #portrait {
    display: none;
  }
}
@media (orientation: landscape) {
  .scroll-container {
    display: none;
  }

  #portrait {
    display: flex;
  }
}
.btn {
  font-size: 18px;
  font-family: "Candara", "cursive", "Arial", "sans-serif";
  padding: 2rem;
  color: white;
  background-color: #6A5188;
  border: none;
  cursor: pointer;
}

.stated-mystery {
  padding: 0 1rem;
  text-align: center;
}

.scroll-container {
  height: 100vh;
  overflow-y: scroll;
  scroll-snap-type: y mandatory;
}

.container {
  height: 100vh;
  width: 100vw;
  scroll-snap-align: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.container > * {
  opacity: 0;
  transform: translate3d(0, 1rem, 0);
  transition: opacity 800ms var(--delay), transform 800ms cubic-bezier(0.13, 0.07, 0.26, 0.99) var(--delay);
}

.is-visible > * {
  opacity: 1;
  transform: translate3d(0, 0, 0);
}

body {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-size: 16px;
}

.prayer {
  padding: 1rem;
  margin: 0;
}
.prayer--tight {
  white-space: pre-wrap;
}

@media screen and (min-width: 350px) {
  html {
    font-size: 17px;
  }
}
@media screen and (min-width: 400px) {
  html {
    font-size: 18px;
  }
}